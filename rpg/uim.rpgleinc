     /**
      * @file uim.rpgleinc
      *
      * ILE RPG header for UIM APIs.  For details please refer to the
      * project's web site, http://i5toolkit.sourceforge.net/
      */

      /copy apiec

     /* UIM Application APIs */
     /* Close Application (QUICLOA) API */
     d quicloa         pr                  extpgm('QUICLOA')
     d     app_handle...
     d                                8a
     d     close_option...
     d                                1a
     d     ec                              likeds(qusec_t)

     /* Open Display Application (QUIOPNDA) API */
     d quiopnda        pr                  extpgm('QUIOPNDA')
     d     app_handle...
     d                                8a
     d     panel_group_name...
     d                               20a
     d     app_scope...
     d                               10i 0
     d     exit_pgm_interface...
     d                               10i 0
     d     full_screen_help...
     d                                1a
     d     ec                              likeds(qusec_t)

     /**
      * uim_open_result_t
      */
     d uim_open_result_t...
     d                 ds                  qualified
     d     conv_error                 1a
     d     data_loss                  1a

     /* Open Display Application (QUIOPNDA) API. number of parms is 9 */
     d quiopnda2       pr                  extpgm('QUIOPNDA')
     d     app_handle...
     d                                8a
     d     panel_group_name...
     d                               20a
     d     app_scope...
     d                               10i 0
     d     exit_pgm_interface...
     d                               10i 0
     d     full_screen_help...
     d                                1a
     d     ec                              likeds(qusec_t)
     d     open_result...
     d                                     likeds(uim_open_result_t)
     d     result_len                10i 0
     d     result_available...
     d                               10i 0

     /* Open Print Application (QUIOPNPA) API */
     d quiopnpa        pr                  extpgm('QUIOPNPA')
     d     app_handle...
     d                                8a
     d     panel_group_name...
     d                               20a
     d     app_scope...
     d                               10i 0
     d     exit_pgm_interface...
     d                               10i 0
     d     prtf_name                 20a
     d     splf_name                 10a
      * 'Y', the ODP is shared
      * 'N', the ODP is not shared
      * 'F', use the share value of the printer file
     d     share_odp                  1a
     d     user_data                 10a
     d     ec                              likeds(qusec_t)

     /* Open Print Application (QUIOPNPA) API. number of parms is 12 */
     d quiopnpa2       pr                  extpgm('QUIOPNPA')
     d     app_handle...
     d                                8a
     d     panel_group_name...
     d                               20a
     d     app_scope...
     d                               10i 0
     d     exit_pgm_interface...
     d                               10i 0
     d     prtf_name                 20a
     d     splf_name                 10a
      * 'Y', the ODP is shared
      * 'N', the ODP is not shared
      * 'F', use the share value of the printer file
     d     share_odp                  1a
     d     user_data                 10a
     d     ec                              likeds(qusec_t)
     d     open_result...
     d                                     likeds(uim_open_result_t)
     d     result_len                10i 0
     d     result_available...
     d                               10i 0

     /* end -- UIM Application APIs */

     /* UIM Display APIs */
     /* Display Panel (QUIDSPP) API */
     d quidspp         pr                  extpgm('QUIDSPP')
     d     app_handle...
     d                                8a
     d     return_val                10i 0
     d     panel_name...
     d                               10a
     d     redisplay_option...
     d                                1a
     d     ec                              likeds(qusec_t)

     /* Prototype of QUIDSPP with optional parm group 1,2 */
     d quidspp3        pr                  extpgm('QUIDSPP')
     d     app_handle...
     d                                8a
     d     return_val                10i 0
     d     panel_name...
     d                               10a
     d     redisplay_option...
     d                                1a
     d     ec                              likeds(qusec_t)
      * optional parm group 1
      * 'N' = the panel is the logical start of a new user task
      * 'O' = the panel is not the start of a new user task
     d     user_task                  1a
     d     call_stack_counter...
     d                               10i 0
     d     call_msgq                256a   options(*varsize)
     d     msg_ref_key...
     d                                4a
     d     cursor_position_option...
     d                                1a
     d     last_list_entry...
     d                                4a
     d     error_list_entry...
     d                                4a
     d     wait_time                 10i 0
     /* Prototype of QUIDSPP with optional parm group 1 */
     d quidspp2        pr                  extpgm('QUIDSPP')
     d     app_handle...
     d                                8a
     d     return_val                10i 0
     d     panel_name...
     d                               10a
     d     redisplay_option...
     d                                1a
     d     ec                              likeds(qusec_t)
      * optional parm group 1
      * 'N' = the panel is the logical start of a new user task
      * 'O' = the panel is not the start of a new user task
     d     user_task                  1a
     d     call_stack_counter...
     d                               10i 0
     d     call_msgq                256a   options(*varsize)
     d     msg_ref_key...
     d                                4a
     d     cursor_position_option...
     d                                1a
     d     last_list_entry...
     d                                4a
     d     error_list_entry...
     d                                4a
     d     wait_time                 10i 0
      * optional parameter group 2
     d     call_msgq_len...
     d                               10i 0
     d     call_qualification...
     d                               20a

     /* end -- UIM Display APIs */

     /**
      * Dummy structure type used by QUIGETV and QUIGETV.
      */
     d ui_dummy_t      ds

     /* UIM Variable Pool APIs */
     /* Get Dialog Variable (QUIGETV) API */
     d quigetv         pr                  extpgm('QUIGETV')
     d     app_handle...
     d                                8a
     d     varbuf                          likeds(ui_dummy_t)
     d     varbuf_len...
     d                               10i 0
     d     varrcd_name...
     d                               10a
     d     ec                              likeds(qusec_t)

     /* Set Dialog Variable (QUIPUTV) API */
     d quiputv         pr                  extpgm('QUIPUTV')
     d     app_handle...
     d                                8a
     d     varbuf                          likeds(ui_dummy_t)
     d     varbuf_len...
     d                               10i 0
     d     varrcd_name...
     d                               10a
     d     ec                              likeds(qusec_t)

     /* end -- UIM Variable Pool APIs */

     /* eof -- uim.rpgleinc */
